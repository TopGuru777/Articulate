@using Articulate.Models
@using Umbraco.Core.Cache
@using Umbraco.Web.Models
@inherits UmbracoViewPage<PostModel>

@if (Model.Author.Image != null)
{
    var thumbnail = Url.GetCropUrl(Model.Author.Image, imageCropMode: ImageCropMode.Crop, width: 50, htmlEncode: false, upScale: false);
    <div class="minilogo" style="background: url(@thumbnail)"></div>
}
<div>
    <strong>@Model.Author.Name</strong>
    <span>2 days ago</span>
</div>